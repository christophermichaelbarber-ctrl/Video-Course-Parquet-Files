/// =================================================================================================
/// Creates a advanced Income Statement (or P&L) solution
/// Requirements:
/// --> Full P&L actuals, forecast, and PY
/// --> For any selected period, see:
/// --> MTD
/// --> QTD
/// --> Full Quarter
/// --> YTD
/// --> Full Year
/// --> Drill into to see accounts and documents (individual ledgers)
/// --> Multi-forecast support
/// --> Top down
/// --> Bottom up
/// --> Currency analysis to identify underlying performance and fx impact
/// --> Overall
/// -->	Underlying
/// --> Fx
/// --> Security, i.e., based on legal entity structure
/// --> Slice and dice by bespoke elements
/// --> Work with
/// --> Power BI
/// -->	Excel
/// --> Copilot
/// Instructions: see https://www.youtube.com/@Finance_and_Fabric for TMDL instructions
/// Author: Based on design pattern from Chris Barber www.linkedin.com/in/christophermichaelbarber/
/// License: MIT Expat
/// =================================================================================================
model Model
	culture: en-US
	defaultPowerBIDataSourceVersion: powerBI_V3
	sourceQueryCulture: en-GB
	dataAccessOptions
		legacyRedirects
		returnErrorValuesAsNull

queryGroup Measures

	annotation PBI_QueryGroupOrder = 0

annotation __PBI_TimeIntelligenceEnabled = 1

annotation PBI_QueryOrder = ["Account","Effective Date","Layout","Ledger","Scenario","_Measures","Legal entity","_Measures_Hidden_new","SelectTimeFrame","Legal Entity Security","Fx Assumptions","Measures_Hidden"]

annotation __TEdtr = 1

annotation PBI_ProTooling = ["DaxQueryView_Desktop","TMDLView_Desktop"]

annotation BestPracticeAnalyzer_IgnoreRules = {"RuleIDs":[]}

annotation BestPracticeAnalyzer_ExternalRuleFiles = ["https://raw.githubusercontent.com/microsoft/Analysis-Services/master/BestPracticeRules/BPARules.json"]

ref table Account
ref table 'Effective Date'
ref table Layout
ref table Ledger
ref table Scenario
ref table 'Legal entity'
ref table _Measures
ref table _Measures_Hidden_new
ref table '__Field Paramater Self-Service Table Measures'
ref table SelectTimeFrame
ref table 'Legal Entity Security'
ref table 'Fx Assumptions'
ref table Measures_Hidden

ref cultureInfo en-US

